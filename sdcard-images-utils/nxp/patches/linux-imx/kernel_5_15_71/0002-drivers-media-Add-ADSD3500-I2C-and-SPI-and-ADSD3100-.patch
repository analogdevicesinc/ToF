+	switch (ctrl->id) {
+	case V4L2_CID_ADSD3100_OPERATING_MODE:
+		adsd3100->curr_operating_mode = ctrl->val;
+		break;
+	case V4L2_CID_ADSD3100_CHIP_CONFIG:
