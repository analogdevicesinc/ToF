+
+	fmt.which = state ? V4L2_SUBDEV_FORMAT_TRY : V4L2_SUBDEV_FORMAT_ACTIVE;
+	fmt.format.width = adsd3100_mode_info_data[0].width;
+	fmt.format.height = adsd3100_mode_info_data[0].height;
